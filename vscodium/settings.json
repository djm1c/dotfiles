{
  // Editor config
  "window.newWindowProfile": "Default",
  "editor.fontFamily": "Iosevka",
  "editor.fontSize": 17,
  "terminal.integrated.fontSize": 17,
  "window.titleBarStyle": "custom",
  "window.title": "${rootName}",
  "window.zoomLevel": 0,
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "explorer.autoReveal": false,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "breadcrumbs.symbolPath": "off",
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.renderLineHighlight": "none",
  "editor.rulers": [100],
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "left",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.labelFormat": "default",
  "workbench.navigationControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "window.density.editorTabHeight": "compact",
  "window.commandCenter": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "files.autoSave": "onFocusChange",
  "debug.console.wordWrap": false,
  "editor.inlineSuggest.enabled": true,
  "editor.smoothScrolling": true,
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": false,
  "workbench.editor.showTabIndex": true,
  "ActiveFileInStatusBar.enable": true,
  "ActiveFileInStatusBar.fullpath": false,
  "ActiveFileInStatusBar.revealFile": false,
  "editor.inlayHints.enabled": "on",
  "terminal.integrated.shellIntegration.enabled": false,

  // Language config
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[c]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.inlayHints.enabled": "offUnlessPressed"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // VIM
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.useCtrlKeys": true,
  "editor.cursorSurroundingLines": 15,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-f"],
      "commands": ["actions.find", "notebook.find"]
    },
    {
      "before": ["<C-w>"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.navigateRight"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["leader", "1"],
      "commands": ["workbench.action.openEditorAtIndex1"]
    },
    {
      "before": ["leader", "2"],
      "commands": ["workbench.action.openEditorAtIndex2"]
    },
    {
      "before": ["leader", "3"],
      "commands": ["workbench.action.openEditorAtIndex3"]
    },
    {
      "before": ["leader", "4"],
      "commands": ["workbench.action.openEditorAtIndex4"]
    },
    {
      "before": ["leader", "5"],
      "commands": ["workbench.action.openEditorAtIndex5"]
    },
    {
      "before": ["leader", "6"],
      "commands": ["workbench.action.openEditorAtIndex6"]
    },
    {
      "before": ["leader", "7"],
      "commands": ["workbench.action.openEditorAtIndex7"]
    },
    {
      "before": ["leader", "8"],
      "commands": ["workbench.action.openEditorAtIndex8"]
    },
    {
      "before": ["leader", "9"],
      "commands": ["workbench.action.openEditorAtIndex9"]
    },
    {
      "before": ["L"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["H"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["leader", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["leader", "b"],
      "commands": ["git.blame.toggleEditorDecoration"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-j>"],
      "commands": ["selectNextSuggestion"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["selectPrevSuggestion"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.colorCustomizations": {
    "editor.background": "#d0bda2",
    "sideBar.background": "#282828",
    "sideBar.foreground": "#fcfcfc",
    "activityBar.foreground": "#fcfcfc",
    "activityBarTop.foreground": "#fcfcfc",
    "icon.foreground": "#fcfcfc",
    "tab.inactiveBackground": "#282828",
    "tab.inactiveForeground": "#fcfcfc",
    "tab.border": "#d0bda2",
    "editorGroupHeader.noTabsBackground": "#282828",
    "editorGroupHeader.tabsBackground": "#282828",
    "titleBar.activeBackground": "#bc6056",
    "titleBar.inactiveBackground": "#282828",
    "titleBar.inactiveForeground": "#fcfcfc",
    "statusBar.background": "#282828",
    "list.hoverBackground": "#3b3b3b",
    "editorRuler.foreground": "#969696",
    "editorIndentGuide.background1": "#969696",
    "editorIndentGuide.activeBackground1": "#808080",
    "editorSuggestWidget.background": "#282828",
    "editorSuggestWidget.foreground": "#fcfcfc",
    "editorHoverWidget.background": "#282828",
    "editorHoverWidget.foreground": "#fcfcfc",
    "editorSuggestWidget.selectedBackground": "#3b3b3b",
    "editorWidget.background": "#282828",
    "input.background": "#3b3b3b",
    "input.foreground": "#fcfcfc",
    "editorCursor.background": "#fcfcfc",
    "editorCursor.foreground": "#3b3b3b",
    "editorLineNumber.activeForeground": "#282828",
    "editorLineNumber.dimmedForeground": "#969696",
    "editorLineNumber.foreground": "#969696"
  },
  "git.blame.editorDecoration.enabled": false,
  "files.exclude": {
    "**/.git": false
  },
  "git.openRepositoryInParentFolders": "never"
}
