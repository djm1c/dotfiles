{
  // Editor config
  "window.newWindowProfile": "Default",
  "window.commandCenter": false,
  "codeium.enableCodeLens": false,
  "editor.fontFamily": "Iosevka",
  "editor.fontSize": 19,
  "terminal.integrated.fontSize": 19,
  "window.titleBarStyle": "custom",
  "window.title": "${rootName}",
  "window.zoomLevel": -1.2,
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "explorer.autoReveal": false,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "breadcrumbs.symbolPath": "off",
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.renderLineHighlight": "none",
  "editor.rulers": [100],
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "left",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.labelFormat": "default",
  "workbench.navigationControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "window.density.editorTabHeight": "compact",
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "files.autoSave": "onFocusChange",
  "debug.console.wordWrap": false,
  "editor.inlineSuggest.enabled": true,
  "editor.smoothScrolling": true,
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": false,
  "workbench.editor.showTabIndex": true,
  "ActiveFileInStatusBar.enable": true,
  "ActiveFileInStatusBar.fullpath": false,
  "ActiveFileInStatusBar.revealFile": false,
  "editor.inlayHints.enabled": "on",
  "terminal.integrated.shellIntegration.enabled": false,
  "workbench.editor.decorations.colors": false,
  "explorer.decorations.colors": false,
  "search.decorations.colors": false,

  // Language config
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[c]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.inlayHints.enabled": "offUnlessPressed"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // VIM
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.useCtrlKeys": true,
  "editor.cursorSurroundingLines": 15,
  "vim.normalModeKeyBindings": [
    {
      "before": ["leader", "d"],
      "commands": ["workbench.action.decreaseViewSize"]
    },
    {
      "before": ["leader", "i"],
      "commands": ["workbench.action.increaseViewSize"]
    },
    {
      "before": ["<C-f>"],
      "commands": ["actions.find", "notebook.find"]
    },
    {
      "before": ["<C-w>"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.navigateRight"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["L"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["H"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["leader", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["leader", "b"],
      "commands": ["git.blame.toggleEditorDecoration"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["leader", "c", "e"],
      "commands": ["codeium.toggleAutocompleteGlobally"]
    },
    {
      "before": ["leader", "c", "c"],
      "commands": ["codeium.openChatView"]
    },
    {
      "before": ["leader", "1"],
      "commands": ["workbench.action.openEditorAtIndex1"]
    },
    {
      "before": ["leader", "2"],
      "commands": ["workbench.action.openEditorAtIndex2"]
    },
    {
      "before": ["leader", "3"],
      "commands": ["workbench.action.openEditorAtIndex3"]
    },
    {
      "before": ["leader", "4"],
      "commands": ["workbench.action.openEditorAtIndex4"]
    },
    {
      "before": ["leader", "5"],
      "commands": ["workbench.action.openEditorAtIndex5"]
    },
    {
      "before": ["leader", "6"],
      "commands": ["workbench.action.openEditorAtIndex6"]
    },
    {
      "before": ["leader", "7"],
      "commands": ["workbench.action.openEditorAtIndex7"]
    },
    {
      "before": ["leader", "8"],
      "commands": ["workbench.action.openEditorAtIndex8"]
    },
    {
      "before": ["leader", "9"],
      "commands": ["workbench.action.openEditorAtIndex9"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-j>"],
      "commands": ["selectNextSuggestion"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["selectPrevSuggestion"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<C-f>"],
      "commands": ["actions.find", "notebook.find"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["editor.action.startFindReplaceAction"]
    }
  ],
  "workbench.colorTheme": "Gruvbox Material Dark",
  "gruvboxMaterial.darkPalette": "mix",
  "gruvboxMaterial.italicComments": false,
  "workbench.colorCustomizations": {
    "panel.border": "#d0bda264",
    "sideBar.border": "#d0bda264",
    "panelTitle.border": "#d0bda264",
    "sideBarActivityBarTop.border": "#d0bda264",
    "sideBarSectionHeader.border": "#d0bda264",
    "titleBar.border": "#d0bda264"
  },
  "git.blame.editorDecoration.enabled": false,
  "files.exclude": {
    "**/.git": false
  },
  "git.openRepositoryInParentFolders": "never",
  "codeium.enableConfig": {
    "*": true
  }
}
